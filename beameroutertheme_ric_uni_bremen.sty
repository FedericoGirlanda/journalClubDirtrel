\defbeamertemplate*{footline}{phbaer}{%
  \leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth]{foot bar}%
    % \begin{beamercolorbox}[wd=.12\paperwidth,leftskip=.2cm,rightskip=.2cm]{foot bar fg}%
    \begin{beamercolorbox}[wd=.24\paperwidth,leftskip=.2cm,rightskip=.2cm]{foot bar fg}%
     %% \includegraphics[height=6ex]{dfki-plain.pdf}%
     \includegraphics[height=7ex]{figures/LogoUniPD.png}%
      \vskip-.9ex
    \end{beamercolorbox}%
    % \begin{beamercolorbox}[wd=.74\paperwidth]{foot bar fg}%
    \begin{beamercolorbox}[wd=.62\paperwidth]{foot bar fg}%
      % \begin{beamercolorbox}[wd=.74\paperwidth,ht=4ex,dp=.6ex,leftskip=.3cm,rightskip=.3cm]{foot bar fg}%
      \begin{beamercolorbox}[wd=.62\paperwidth,ht=4ex,dp=.6ex,leftskip=.3cm,rightskip=.3cm]{foot bar fg}%
        {\textbf{\usebeamerfont{text in foot}\insertshorttitle}}
      \end{beamercolorbox}
      \begin{beamercolorbox}[wd=.74\paperwidth,ht=2ex,dp=2.4ex,leftskip=.3cm,rightskip=.3cm
        plus1fill]{foot bar fg}%
        \usebeamerfont{text in foot}\insertshortauthor, \insertsubtitle, \insertdate
      \end{beamercolorbox}
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.14\paperwidth]{foot bar fg}%
      \begin{beamercolorbox}[right,wd=.14\paperwidth,ht=4ex,dp=.6ex,leftskip=.2cm
        plus1fill,rightskip=.2cm]{foot bar fg}%
      \end{beamercolorbox}
      \begin{beamercolorbox}[right,wd=.14\paperwidth,ht=2ex,dp=2.4ex,leftskip=.2cm
        plus1fill,rightskip=.2cm]{foot bar fg}%
        \usebeamerfont{text in foot}Slide {\insertframenumber} of \inserttotalframenumber
      \end{beamercolorbox}
    \end{beamercolorbox}
  \end{beamercolorbox}
}


